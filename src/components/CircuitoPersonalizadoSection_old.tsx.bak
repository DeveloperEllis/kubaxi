                    </div>
                    <p className="text-xs text-blue-700">
                      ${precioTransporte} √ó {planDias.length} d√≠as
                    </p>
                  </div>

                  {(() => {
                    const diasConAlojamiento = planDias.filter(d => d.alojamiento).length
                    return diasConAlojamiento > 0 ? (
